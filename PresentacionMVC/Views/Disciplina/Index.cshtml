@model IEnumerable<DTO.ListadoDisciplinasDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Disciplinas</h1>
@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-primary">
        @TempData["Mensaje"]
